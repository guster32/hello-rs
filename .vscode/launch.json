{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hello-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hello-rs",
                    "--package=hello-rs"
                ],
                "filter": {
                    "name": "hello-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'hello-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hello-rs",
                    "--package=hello-rs"
                ],
                "filter": {
                    "name": "hello-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "RemoteDebug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/x86_64-arcadia-linux-gnu/debug/${config:ARCADIA_QEMU.PROGRAM}",
            "miDebuggerServerAddress": "${config:ARCADIA_QEMU.TARGET_IP}:${config:ARCADIA_QEMU.TARGET_GDB_PORT}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
              "MIMode": "gdb"
            },
            "preLaunchTask": "CrossBuildDeployAndRemoteDebug",
            "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
        },
        {
            "name": "RemoteDebugOdroidXU4",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/armv7-arcadia-linux-gnueabihf/debug/${config:ARCADIA_ODROIDXU4.PROGRAM}",
            "miDebuggerServerAddress": "${config:ARCADIA_ODROIDXU4.TARGET_IP}:${config:ARCADIA_ODROIDXU4.TARGET_GDB_PORT}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
              "MIMode": "gdb"
            },
            "preLaunchTask": "CrossBuildDeployAndRemoteDebugOdroidXU4",
            "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
        },

    ]
}